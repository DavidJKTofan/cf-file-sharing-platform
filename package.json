{
	"name": "file-sharing-platform",
	"version": "0.0.2",
	"scripts": {
		"dev": "npm run build:css && wrangler types && wrangler dev --env development",
		"deploy": "npm run build:css && wrangler types && wrangler deploy",
		"build:css": "npx @tailwindcss/cli -i ./input.css -o ./public/tailwind.css --minify",
		"watch:css": "npx @tailwindcss/cli -i ./input.css -o ./public/tailwind.css --watch",
		"typecheck": "tsc --noEmit"
	},
	"devDependencies": {
		"@tailwindcss/postcss": "^4.1.17",
		"autoprefixer": "^10.4.21",
		"postcss": "^8.5.6",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.5.2",
		"wrangler": "^4.53.0"
	},
	"dependencies": {
		"@tailwindcss/cli": "^4.1.17",
		"aws4fetch": "^1.0.20",
		"hono": "^4.9.8",
		"zod": "^4.1.12"
	}
}
